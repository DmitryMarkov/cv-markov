{
  "name": "cv-markov",
  "version": "3.2.0",
  "author": "Dmitry Markov",
  "description": "Dmitry Markov's CV in pure HTML & CSS",
  "bugs": {
    "url": "https://github.com/DmitryMarkov/cv-markov/issues"
  },
  "homepage": "https://github.com/DmitryMarkov/cv-markov#readme",
  "keywords": [
    "html",
    "css"
  ],
  "license": "ISC",
  "main": "src/index.html",
  "repository": {
    "type": "git",
    "url": "git@github.com:DmitryMarkov/cv-markov.git"
  },
  "scripts": {
    "build": "gulp",
    "build:favicons": "gulp publish",
    "css": "stylelint src/**/*.css",
    "css:fix": "stylelint src/**/*.css --fix",
    "editorconfig": "editorconfig-checker",
    "html": "node-w3c-validator -i src/index.html -f lint -evH",
    "markdown": "remark '*.md'",
    "prepare": "husky install",
    "prettier": "prettier ./src/** src/index.html",
    "prettier:fix": "prettier --write ./src/** src/index.html",
    "security-audit": "yarn audit --groups dependencies --level high || test $? -lt 7",
    "serve": "gulp watch",
    "start": "yarn serve",
    "test": "yarn build && mocha test/index.js --timeout 15000",
    "test:update": "yarn build && node test/update.js",
    "up": "yarn upgrade-interactive --latest --exact"
  },
  "resolutions": {
    "caniuse-lite": "^1.0.30001478"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "autoprefixer": "10.4.16",
    "chai": "4.3.10",
    "cssnano": "6.0.1",
    "del": "6.1.1",
    "editorconfig-checker": "5.0.1",
    "gulp": "4.0.2",
    "gulp-htmlmin": "5.0.1",
    "gulp-load-plugins": "2.0.8",
    "gulp-postcss": "9.0.1",
    "gulp-real-favicon": "0.3.2",
    "gulp-replace": "1.1.4",
    "gulp-sourcemaps": "3.0.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "mocha": "10.2.0",
    "node-w3c-validator": "2.0.2",
    "pixelmatch": "5.3.0",
    "pngjs": "7.0.0",
    "polyserve": "0.27.15",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "puppeteer": "11.0.0",
    "remark-cli": "11.0.0",
    "remark-preset-lint-markdown-style-guide": "5.1.3",
    "remark-preset-lint-recommended": "6.1.3",
    "stylelint": "15.11.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-prettier": "4.0.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie >= 0",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{css, html}": [
      "yarn prettier",
      "yarn css"
    ],
    "*.md": [
      "yarn markdown"
    ]
  },
  "nodeW3Cvalidator": {
    "suppressErrors": []
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 76,
    "semi": false,
    "singleQuote": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide"
    ]
  },
  "renovate": {
    "automerge": true,
    "automergeType": "branch",
    "commitMessagePrefix": "Renovate: ",
    "extends": [
      "config:base"
    ],
    "major": {
      "automerge": true
    }
  },
  "stylelint": {
    "extends": "stylelint-prettier/recommended",
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
